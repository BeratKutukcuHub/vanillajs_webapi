{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./",
    "allowJs": false
  },
  "include": [
    "*/src/**/*.ts",
    "*/*/src/**/*.ts",
    "*/*/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}